<section id="recent">
    <header><h2>Recent</h2></header>

    <!-- /.item-->
    <% for (var i = 1; i < 4; ++i) {%>
      <div class="item list">
          <div class="image">
              <div class="quick-view"><i class="fa glyphicon glyphicon-copyright-mark"></i><span></span></div>
              <a href="item-detail.html">
                  <div class="overlay">
                      <div class="inner">
                          <div class="content">
                              <h4>Description</h4>

                          </div>
                      </div>
                  </div>
                  <img src="<%- oferta['data'][oferta['data'].length-i].gallery%>" alt="">
              </a>
          </div>
          <div class="wrapper">
              <a href="item-detail.html"><h3><%- oferta['data'][oferta['data'].length-i].title%></h3></a>
              <figure>63 Birch Street</figure>
              <div class="info">
                  <div class="type">
                      <i><img src="assets/icons/restaurants-bars/restaurants/cafetaria.png" alt=""></i>
                      <span>Cafeteria</span>
                  </div>
                  <div class="rating" data-rating="<%- JSON.stringify(oferta['data'][i].rating) %>"></div>
              </div>
          </div>
      </div>
    <%}%>

    <!-- /.item-->
</section>
